<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="myPU">
        <!-- Entity classes to be used by JPA -->
        <!-- supermercado -->
        <class>com.eafit.nodo.models.supermercado.Cliente</class>
        <class>com.eafit.nodo.models.supermercado.Marca</class>
        <class>com.eafit.nodo.models.supermercado.Compra</class>
        <class>com.eafit.nodo.models.supermercado.Producto</class>

        <properties>
            <!-- Configuration of the connection to the database -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="${jakarta.persistence.jdbc.url}"/>
            <property name="jakarta.persistence.jdbc.user" value="${jakarta.persistence.jdbc.user}"/>
            <property name="jakarta.persistence.jdbc.password" value="${jakarta.persistence.jdbc.password}"/>

            <!-- database-specific dialect -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>

            <!-- Additional Hibernate configurations -->
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>